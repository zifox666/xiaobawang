<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>帮助菜单</title>
    <script src="../tailwindcss.js"></script>
    <style>
      body {
          background-color: #121212;
          color: #e0e0e0;
          font-family: system-ui, -apple-system, sans-serif;
      }
      .warning-stripes {
          background: repeating-linear-gradient(
              45deg,
              #ff5e00,
              #ff5e00 10px,
              #2a2a2a 10px,
              #2a2a2a 20px
          );
      }
    </style>
  </head>
  <body class="min-h-screen bg-gray-900">
    <header class="mb-7 w-full">
      <div class="warning-stripes flex items-center justify-center py-2">
        <span class="rounded bg-gray-800 px-10 py-2 text-2xl font-bold text-white">
          {{ title }}
        </span>
      </div>
    </header>

    <div class="rounded-lg px-4 py-2 text-white">
        {% for help in data %}
          <!-- 大类帮助横条 -->
          <div class="rounded-md bg-gray-800 p-2">
            <div class="mt-2 mb-4 ml-2 flex items-center gap-4 border-b-2 border-gray-600">
              <div class="text-teal-400">
                <img class="h-10 w-10" alt="" src="./{{ help.img }}" />
              </div>
              <div class="text-2xl font-bold text-gray-200">{{ help.title }}</div>
            </div>

            <div class="grid grid-cols-1 gap-4 px-2.5 py-2 md:grid-cols-3">
                {% for item in help["items"] %}
                  <!-- 小类 -->
                  <div class="rounded-lg bg-gray-700 p-4">
                    <div class="mb-3">
                        {% if item.new %}
                        <span class="rounded-md bg-red-500 px-2 py-1 font-bold text-white mr-1">NEW</span>
                        {% endif %}
                        {% if item.hot %}
                        <span class="rounded-md bg-orange-500 px-2 py-1 font-bold text-white mr-1">HOT</span>
                        {% endif %}
                        <span class="text-xl font-bold">{{ item.title }}</span>
                    </div>

                    <div class="space-y-2">
                        {% for command in item.commands %}
                        <div class="rounded-md bg-gray-600 px-2 py-1 text-gray-300">{{ command }}</div>
                        {% endfor %}
                        <div class="mt-2 text-gray-300">{{ item.desc }}</div>
                    </div>
                  </div>
                {% endfor %}
            </div>
          </div>
        {% endfor %}
    </div>

    <footer class="mt-8 text-center text-sm text-gray-500">
      <p>Created by XiaoBaWang 1.1.0 | Designed by newdoublex</p>
    </footer>
  </body>
</html>
